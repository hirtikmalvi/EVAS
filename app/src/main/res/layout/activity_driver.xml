<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:layout_gravity="top"
    android:padding="16dp"
    tools:context=".DriverActivity">

    <!-- Driver Photo and Text -->

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="175dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/driverImageView"
            android:layout_width="100dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:src="@drawable/driver" />

        <TextView
            android:id="@+id/driverTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="Driver"
            android:textSize="21sp"
            android:textStyle="" />
    </LinearLayout>

    <!-- Buttons for Driver Features -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp">



        <Button
            android:id="@+id/gpsButton"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="GPS" />

        <Button
            android:id="@+id/trafficButton"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:text="Traffic"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/askToAdminButton"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:text="Ask to Admin"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/incidentButton"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Incident Details" />

        <Button
            android:id="@+id/communicationButton"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
        android:text="Communication" />

        <TextView
            android:id="@+id/logOutTextView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="Log Out"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>
