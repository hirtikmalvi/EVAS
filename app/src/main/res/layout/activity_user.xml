<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:layout_gravity="top"
    android:padding="16dp"
    tools:context=".UserActivity">

    <!-- User Photo and Text -->

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/userImageView"
            android:layout_width="100dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/userTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="User"
            android:textStyle=""
            android:layout_gravity="center_horizontal"
            android:textSize="22sp" />
    </LinearLayout>

    <!-- Buttons for Driver Features -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/userNotificationButton"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Notifications" />

        <Button
            android:id="@+id/locationButton"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:text="Location"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/profileManagementButton"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:text="Profile Management"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/reportAnEmergencyButton"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:text="Report an Emergency"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/safetyInformationButton"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:text="Safety Information"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/logOutTextView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="Log Out"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>
