<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true"> <!-- Lighter background color -->
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/driverImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/black"
            app:civ_border_width="1dp"
            android:layout_centerVertical="true"
             />

        <TextView
            android:id="@+id/driverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driver Name"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/driverImageView"
            />


<!--        This contains only Text field of Username: -->
        <TextView
            android:id="@+id/driverUserNameField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username: "
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/driverImageView"
            android:layout_below="@+id/driverName"
            />

<!--    This contains Actual Text Username:-->
        <TextView
            android:id="@+id/driverUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hirtikmalvi"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/driverAadharNumberField"
            android:layout_below="@+id/driverName" />


        <!--        This contains only Text field of Phone No:: -->
        <TextView
            android:id="@+id/driverPhoneNumberField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone No: "
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/driverImageView"
            android:layout_below="@+id/driverUserNameField"
            />

        <!--    This contains Actual Phone Number:-->
        <TextView
            android:id="@+id/driverPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9898210921"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/driverAadharNumberField"
            android:layout_below="@+id/driverUserNameField" />


        <!--        This contains only Text field of Aadhar No:: -->
        <TextView
            android:id="@+id/driverAadharNumberField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aadhar No: "
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/driverImageView"
            android:layout_below="@+id/driverPhoneNumberField" />


        <!--    This contains Actual Aadhar Number:-->
        <TextView
            android:id="@+id/driverAadharNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456789012"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/driverAadharNumberField"
            android:layout_below="@+id/driverPhoneNumberField" />

    </RelativeLayout>
    
    
</androidx.cardview.widget.CardView>